{% extends '::layout.html.twig' %}

{% block title 'Chat' %}

{% block content %}
              
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Редактирование профиля {{ name }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                             <form action="{{ path('user_profile') }}" method="post" {{ form_enctype(form) }} role="form">
                             
                                {% if form_errors(form) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form) }}
                                    </div>
                                {% endif %}
                                
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-2">
                                            {{ form_label(form.username, 'Имя:') }}
                                        </div>
                                        <div class="col-xs-6 col-sm-4">
                                            {{ form_errors(form.username) }}
                                            <div class="form-group input-group">
                                                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Введите имя'} }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.form-group -->
                                
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-2"></div>
                                        <div class="col-xs-6 col-md-4">
                                            {{ form_rest(form) }}
                                            <button type="submit" class="btn btn-primary">Сохранить</button>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                </div>
                                <!-- /.form-group -->
                            </form>
                            <!-- /form -->
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
                
                <!-- .panel-body -->
                <div class="panel-footer"></div>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>


{% endblock %}
